{% extends 'base.html.twig' %}


{% block titre %} | {{ produit.name }}{% endblock %}
{% block description %}{{ produit.description }}{% endblock %}


{% block body %}

    <div class="container">
        <div class="row">
            {% include '@Ecommerce/Front/Default/col-left.html.twig' %}
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-5">
                        <img src="{{ asset(produit.image.webPath) }}" alt="properties-3"
                             class="img-responsive">
                    </div>

                    <div class="col-md-4">
                        <h4>{{ produit.name }}</h4>
                        <h5>{{ produit.category.name}}</h5>
                        <p>{{ produit.description }}</p>
                        <h4>{{ produit.tva.name) }}€</h4>
                        {% if panier[produit.id] is not defined %}
                            <form action="{{ path('ajouter', { 'id' : produit.id }) }}" method="get">
                                <select name="qte" class="span1 form-control">
                                    {% for i in 1..10 %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select><br>
                                <div>
                                    <button class="btn btn-primary">Ajouter au panier</button>
                                </div>
                            </form>
                        {% else %}
                            <a href="{{ path('panier') }}" class="btn btn-primary">Produit déjà dans le panier</a>
                        {% endif %}
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}