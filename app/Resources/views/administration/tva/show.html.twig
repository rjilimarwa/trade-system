{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tva</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tva.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tva.nom }}</td>
            </tr>
            <tr>
                <th>Multiplicate</th>
                <td>{{ tva.multiplicate }}</td>
            </tr>
